{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "baseUrl": ".",
      "paths": {
         "@config/*": [
            "src/config/*"
         ],
         "@modules/*": [
            "src/modules/*"
         ],
         "@shared/*": [
            "src/shared/*"
         ],
      },
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true
   }
}